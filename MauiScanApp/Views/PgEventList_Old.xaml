<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiScanApp.Views.PgEventList_Old"
             Title="PgEventList_Old">
    <ScrollView>
    <VerticalStackLayout>
        <Label 
            Text="過去"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <CollectionView
            x:Name="lvOldEvent"
            SelectionMode="Single"
            SelectionChanged="lvOldEvent_SelectionChanged"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                        <Label FontSize="40" TextColor="Blue" Text="{Binding ProductName}"/>
                        <Label FontSize="25" TextColor="LightBlue" Text="{Binding BeginTime, StringFormat='{}{0:yyyy/MM/dd HH:mm}'}"/>
                        <Label FontSize="25" TextColor="LightBlue" Text="{Binding EndTime, StringFormat='{}{0:yyyy/MM/dd HH:mm}'}"/>
                        <Label FontSize="25" TextColor="LightBlue" Text="{Binding Address}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>