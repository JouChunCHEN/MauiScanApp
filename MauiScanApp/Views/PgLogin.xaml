<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiScanApp.Views.PgLogin"
             Title="PgLogin">
    <VerticalStackLayout 
        x:Name="stackLayout"
        Margin="30,100,30,0">
        <Image Source="logo"
               VerticalOptions="Center"
               Margin="0,20,0,40"/>
        <Label
            FontSize="16"
            TextColor="gray"
            Text="帳號（統一編號）"/>
        <Entry
            x:Name="txtTaxId"
            FontSize="16"
            Margin="0,0,0,20"
            Text="98270077"
            TextChanged="txtTaxId_TextChanged"/>
        <Label
            FontSize="16"
            TextColor="Gray"
            Text="密碼"/>
        <Entry
            x:Name="txtPassword"
            IsPassword="True"
            Text="1234"
            FontSize="16"
            Margin="0,0,0,20"/>
        <Label
           Text="忘記密碼"
            HorizontalOptions="End"
            Margin="0,0,20,20"
            TextColor="Blue"
            TextDecorations="Underline"/>
        <Button
            Text="登入"
            Clicked="Button_Clicked"
            WidthRequest="200"
            FontSize="20"
            BackgroundColor="#06B4E5"/>
    </VerticalStackLayout>
</ContentPage>